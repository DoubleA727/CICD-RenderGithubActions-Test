<!DOCTYPE html>
<html>

<head>
    <style>
        body {
            font-family: Arial;
            padding: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table,
        td,
        th {
            border: 1px solid #ccc;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
        }

        .total {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <h1>Order Receipt</h1>
    <p>Order ID: <%= orderId %>
    </p>
    <p>Email: <%= email %>
    </p>

    <table>
        <tr>
            <th>Item</th>
            <th>Qty</th>
            <th>Price</th>
        </tr>
        <% items.forEach(item=> { %>
            <tr>
                <td>
                    <%= item.name %>
                </td>
                <td>
                    <%= item.quantity %>
                </td>
                <td>$<%= item.subtotal %>
                </td>
            </tr>
            <% }) %>
                <tr class="total">
                    <td colspan="2">Total</td>
                    <td>$<%= total %>
                    </td>
                </tr>
    </table>
</body>

</html>